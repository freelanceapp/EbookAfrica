<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/textcolor"
    android:layout_marginTop="5dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1">
            <views.TypefaceTextView
                android:id="@+id/heading_horizontal_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/icons_8_muted_green_1"
                android:textSize="17sp"
                geekui:customTypeface="fonts/AllerDisplay.ttf"
                android:layout_marginLeft="5dp"
                android:text="Other related content to specific category "/>

        </LinearLayout>


    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:id="@+id/view113322"-->
    <!--android:visibility="visible"-->
    <!--android:background="@color/textcolor"/>-->







    <views.HorizontalListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/related_h_list"
        android:background="@android:color/transparent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp">

    </views.HorizontalListView>


    <views.TypefaceTextView
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/icons_8_muted_green_1"
        android:textSize="17sp"
        android:gravity="center"
        geekui:customTypeface="fonts/AllerDisplay.ttf"
        android:layout_marginLeft="5dp"
        android:text="SEE ALL"/>




</LinearLayout>
