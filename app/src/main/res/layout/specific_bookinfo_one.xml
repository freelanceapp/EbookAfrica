<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:gravity="center|top">







    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_book"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:background="#000000"
        android:scaleType="fitXY"/>


    <views.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of the book Goes here"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        geekui:customTypeface="fonts/Confessions Font.otf"
        android:textColor="@color/title"
        android:id="@+id/book_name"/>





    <views.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        geekui:customTypeface="fonts/Confessions Font.otf"
        android:textColor="@color/icons_8_muted_green_1"
        android:id="@+id/author_name"/>



    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:gravity="center">-->
        <!--<views.CustomRatingBarGreen-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:id="@+id/rating_bar_top"></views.CustomRatingBarGreen>-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
