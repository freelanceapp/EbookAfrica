<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apporio.ebookafrica.specificbook.SpecificBookActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/icons_8_muted_green_1"
        android:orientation="horizontal"
        android:gravity="center|left">


        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/back">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_left_back_white"/>

        </LinearLayout>


        <views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            geekui:customTypeface="fonts/Confessions Font.otf"
            android:textSize="20dp"
            android:text="Category Name"
            android:textColor="@color/icons_8_muted_offWhite"/>




    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/container_specific_category"></FrameLayout>

</LinearLayout>
