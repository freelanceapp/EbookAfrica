<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_280"
    android:layout_height="wrap_content"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_3">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:background="@color/icons_8_muted_green_1">
        <ImageView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_gravity="center_vertical"
            android:tint="#ffffff"
            android:src="@drawable/ic_password_green" />

    </LinearLayout>

    <views.TypefaceTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30"
        android:background="@color/icons_8_muted_green_1"
        geekui:customTypeface="fonts/Confessions Font.otf"
        android:gravity="center"
        android:paddingLeft="@dimen/dim_7"
        android:text="Change Password"
        android:textColor="#fff"
        android:textSize="@dimen/dim_18" />


    <LinearLayout
        android:id="@+id/llOldPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_below="@+id/llLanguage"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_2"
        android:orientation="horizontal">




        <EditText
            android:id="@+id/edtoldPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Old Password"
            android:textColor="@color/icons_8_muted_green_1"
            android:textSize="@dimen/dim_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llnewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_below="@+id/llLanguage"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_2"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtnewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="New Password"
            android:textColor="#000"
            android:textSize="@dimen/dim_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llagainPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_below="@+id/llLanguage"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_2"
        android:layout_marginTop="@dimen/dim_2"
        android:orientation="horizontal">



        <EditText
            android:id="@+id/edtagainPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/dim_10"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="Confirm Password"
            android:textColor="#000"
            android:textSize="@dimen/dim_16" />

    </LinearLayout>

    <Button
        android:id="@+id/btnPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_below="@+id/btnLogOut"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10"
        android:background="@color/icons_8_muted_green_1_dark"
        android:text="Change Password"
        android:textColor="#fff" />



</LinearLayout>