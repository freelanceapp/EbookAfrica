<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_280"
    android:layout_height="wrap_content"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_3">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">
        <ImageView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_coupons_green" />

    </LinearLayout>

    <views.TypefaceTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30"
        geekui:customTypeface="fonts/Confessions Font.otf"
        android:gravity="center"
        android:paddingLeft="@dimen/dim_7"
        android:text="Apply Coupons"
        android:textSize="@dimen/dim_18" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">




        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:id="@+id/image_book_dialog"
            android:background="#000000"
            android:scaleType="fitXY"
            android:layout_marginBottom="5dp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons_8_muted_green_1"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Gift Card - AWS-54223"
            android:gravity="center"
            android:id="@+id/gift_card_number_txt"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#ffffff"
            android:layout_margin="5dp"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Card Value = $120"
            android:gravity="center"
            android:id="@+id/gift_amount_txt"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="You can not purchase this book because of unsufficient balance in gfit card. "
            android:gravity="center"
            android:layout_margin ="5dp"
            android:id="@+id/gift_message_txt"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_below="@+id/btnLogOut"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@color/icons_8_muted_green_1_dark"
            android:text="Cancel"
            android:layout_weight="1"
            android:textColor="#fff" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/apply_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_below="@+id/btnLogOut"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@color/icons_8_muted_green_1_dark"
            android:text="OK"
            android:layout_weight="1"
            android:textColor="#fff" />
    </LinearLayout>





</LinearLayout>