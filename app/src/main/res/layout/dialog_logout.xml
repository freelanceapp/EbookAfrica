<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_280"
    android:layout_height="wrap_content"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_3">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">
        <ImageView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_logout_green" />

    </LinearLayout>

    <views.TypefaceTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30"
        geekui:customTypeface="fonts/Confessions Font.otf"
        android:gravity="center"
        android:paddingLeft="@dimen/dim_7"
        android:text="Logout"
        android:textSize="@dimen/dim_18" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Are You sure you want to log out"
        android:gravity="center"/>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_below="@+id/btnLogOut"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@color/icons_8_muted_green_1_dark"
            android:text="Cancel"
            android:layout_weight="1"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_below="@+id/btnLogOut"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@color/icons_8_muted_green_1_dark"
            android:text="LogOut"
            android:layout_weight="1"
            android:textColor="#fff" />
    </LinearLayout>





</LinearLayout>